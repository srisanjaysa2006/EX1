<body>

  <header>
    <h1>Fresh Microblog</h1>
    <p>Express yourself in short posts!</p>
  </header>

  <form id="postForm">
    <input type="text" id="username" placeholder="Your username" maxlength="30" required />
    <textarea id="postContent" placeholder="What's on your mind?" maxlength="280" required></textarea>
    <button type="submit">Post</button>
  </form>

  <section id="postsContainer">
    <div class="post">
      <div class="post-header">
        <span>@welcome_user</span>
        <time>Just now</time>
      </div>
      <div class="content">Welcome to the Fresh Microblog! Start sharing your thoughts above.</div>
    </div>
  </section>

  <p class="footer-note">* This demo app does not save posts permanently.</p>

  <script>
    const postForm = document.getElementById('postForm');
    const postsContainer = document.getElementById('postsContainer');

    postForm.addEventListener('submit', function(e) {
      e.preventDefault();

      const username = document.getElementById('username').value.trim();
      const content = document.getElementById('postContent').value.trim();

      if (!username || !content) return;

      const post = document.createElement('div');
      post.classList.add('post');

      // Format time (just HH:MM)
      const now = new Date();
      const timeStr = now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });

      post.innerHTML = `
        <div class="post-header">
          <span>@${ram}</span>
          <time>${timeStr}</time>
        </div>
        <div class="content"></div>
      `;
      post.querySelector('.content').textContent = content;

      // Add new post at the top
      postsContainer.insertBefore(post, postsContainer.firstChild);

      // Clear form
      postForm.reset();
    });
  </script>

</body>
